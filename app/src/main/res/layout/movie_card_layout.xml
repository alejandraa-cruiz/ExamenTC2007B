<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_margin="12dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/movie_name"
            android:layout_width="276dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="-284dp"
            android:layout_toStartOf="@id/movie_profile_pic"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Intensamente"
            android:textAlignment="textStart"
            android:textColor="#333333"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_name"
            android:layout_alignEnd="@id/movie_profile_pic"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="-210dp"
            android:ellipsize="end"
            android:text="Es una película donde puedes ver las emociones dentro de la cabeza de una niña"
            android:textAlignment="textStart"
            android:textColor="#333333"
            android:textSize="13sp" />




        <ImageView
            android:id="@+id/movie_profile_pic"
            android:layout_width="94dp"
            android:layout_height="88dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="16dp"
            android:src="@mipmap/ic_launcher" />
        />
    </RelativeLayout>


</androidx.cardview.widget.CardView>


